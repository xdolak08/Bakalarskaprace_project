<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="107dp"
        android:text="Vítejte na úvodní stránce aplikace."
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationViewProtocolApp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="309dp"
        android:layout_marginBottom="284dp"
        android:text="Tato aplikace obsahuje práci s protokolem."
        android:textAlignment="center"
        android:textSize="20dp" />





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewProtocolApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_background"
        app:menu="@menu/bottom_nav_menu_protocolapp"
        />



</RelativeLayout>